{% extends 'BackendBundle:Principal:layout.html.twig' %}

{% block body %}
    <div class="page-title">
        <h5><i class="fa fa-table"></i> Banner <small>Criar um novo banner.</small></h5>
    </div>
    {{ form_start(form, {'attr': {'class': 'form-horizontal', 'role': 'form'}}) }}

    <div class="panel panel-default">
        <div class="panel-heading"><h6 class="panel-title">Novo Banner</h6></div>
        <div class="panel-body">
            {% if not form.vars.valid %}
                
                <div class="alert alert-danger fade in widget-inner">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    {{ form_errors(form.texto) }}
                </div>
            {% endif %}

            {% set cssTitulo = 'form-group' %}
            {% if form.texto.vars.errors|length %}
                {% set cssTitulo = 'form-group has-error has-feedback' %}
            {% endif %}

            <div class="{{ cssTitulo }}">
                <label class="col-sm-2 control-label">Título: </label>
                <div class="col-sm-10">
                    {{form_widget(form.texto)}}
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">Imagem:</label>
                <div class="col-sm-10">
                    {{form_widget(form.imagem)}}
                </div>
            </div>

            

            <div class="form-actions text-right">
                {{form_row(form._token)}}
                {{form_row(form.id) }}
                {{form_widget(form.save)}}
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
