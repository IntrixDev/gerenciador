{% extends 'BackendBundle:Principal:layout.html.twig' %}

{% block body %}

    <!-- Page title -->
    <div class="page-title">
        <h5><i class="fa fa-file-o"></i> Home page <small>Usado para editar a foto e o texto da homepage</small></h5>
    </div>
    <!-- /page title -->
    <form class="form-horizontal" action="#" role="form">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h6 class="panel-title">Home page atual</h6>
            </div>
            {% for banner in oBanner %}
                <div class="panel-body">


                    <div class="form-group">
                        <label class="col-sm-2 control-label text-right">TÃ­tulo:</label>
                        <div class="col-sm-10">
                            {% set aLinhas = banner.texto|split(',') %}
                            {% for sLinha in aLinhas %}
                                <p class="form-control-static">
                                    {{sLinha}}
                                </p>
                            {% endfor %}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label text-right">Imagem:</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">
                                {% set imagem = 'uploads/banner/' ~ banner.imagem %}
                                <img src="{{ asset(imagem | apply_filter('backend_banner')) }}" alt="Banner">
                            </p>
                        </div>
                    </div>
                    <div class="form-actions text-right">
                        <a href="{{ path('banner_edit', { 'id': banner.id }) }}" type="button" class="btn btn-primary">Editar</a>
                    </div>

                </div>
            {% endfor %}
        </div>
    </form>

{% endblock %}