{% extends 'BackendBundle:Layout:layout.html.twig' %}

{% block body %}

    <!-- Page title -->
    <div class="page-title">
        <h5><i class="fa fa-file-o"></i> Lista as movimentações</h5>
        <div class="btn-group">
            <a href="#" class="btn btn-link btn-lg btn-icon dropdown-toggle" data-toggle="dropdown"><i class="fa fa-cogs"></i><span class="caret"></span></a>
            <ul class="dropdown-menu dropdown-menu-right">
                <li><a href="{{ path('movimentacao_new') }}">Adicionar uma movimentação</a></li>
            </ul>
        </div>
    </div>
    <!-- Statistics -->
    <ul class="row stats">
        <li class="col-xs-3"><a href="#" class="btn btn-default">52,00</a> <span>Saldo Inicial</span></li>
        <li class="col-xs-3"><a href="#" class="btn btn-success">520,00</a> <span>Dinheiro em caixa</span></li>
        <li class="col-xs-3"><a href="#" class="btn btn-danger">14,00</a> <span>Dinheiro Retirado</span></li>
        <li class="col-xs-3"><a href="#" class="btn btn-default">48,00</a> <span>Gasto com serviço</span></li>
    </ul>
    <!-- /statistics -->
    <div class="panel panel-default">
        <div class="panel-heading">
            <h6 class="panel-title">Movimentações</h6>
        </div>
        <div class="datatable">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Produto</th>
                        <th>Valor</th>
                        <th>Tipo</th>
                        <th>Descrição</th>
                    </tr>
                </thead>
                <tbody>
                    {% for entity in entities %}
                        <tr class="success">
                            <td>{{ entity.produto }}</td>
                            <td>R$ {{ entity.valor|number_format(2, ',', '.') }}</td>
                            <td>{{ entity.tipoFormated }}</td>
                            <td>{{ entity.descricao }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}